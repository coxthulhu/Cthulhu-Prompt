{
  "name": "cthulhuprompt",
  "version": "1.0.0",
  "description": "An Electron application with Svelte and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "start": "electron-vite preview",
    "dev": "cross-env DEV_ENVIRONMENT=DEV CHOKIDAR_USEPOLLING=1 CHOKIDAR_INTERVAL=200 electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "test": "npm run test:vitest && npm run test:playwright",
    "test:vitest": "vitest run tests/vitest",
    "test:playwright": "cross-env VITE_LOG_LEVEL=warn npm run build && cross-env DEV_ENVIRONMENT=PLAYWRIGHT npx playwright test",
    "test:playwright:nobuild": "cross-env DEV_ENVIRONMENT=PLAYWRIGHT npx playwright test"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/svelte-query": "^6.0.9",
    "electron-updater": "^6.3.9",
    "lucide-svelte": "^0.555.0",
    "monaco-editor": "^0.52.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.544.0",
    "@playwright/test": "^1.41.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^22.16.5",
    "bits-ui": "^2.14.4",
    "cross-env": "^10.1.0",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-svelte": "^3.13.0",
    "memfs": "^4.6.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.45.2",
    "svelte-check": "^4.3.4",
    "tailwind-variants": "^3.2.2",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.0.0"
  }
}
